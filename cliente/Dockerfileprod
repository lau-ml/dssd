# Usa una imagen base de Node.js para construir la aplicación Angular
FROM node:22.0.0-alpine as build

# Definir el directorio de trabajo
WORKDIR /app

# Copiar los archivos de configuración de npm
COPY package.json ./
COPY package-lock.json ./

# Instalar dependencias globales y locales
RUN npm install -g @angular/cli
RUN npm install

# Copiar el código fuente de la aplicación Angular
COPY . .

# Construir la aplicación Angular en modo producción
RUN ng build --configuration production

# Usar Nginx para servir la aplicación Angular en producción
FROM nginx:alpine

# Copiar los archivos de construcción desde la etapa anterior
COPY --from=build /app/dist/cliente /usr/share/nginx/html

# Copiar el archivo de configuración personalizado de Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Expose the same port as Nginx listens on
EXPOSE 80

# Use the default behavior of Nginx running in the background
CMD ["nginx"]
