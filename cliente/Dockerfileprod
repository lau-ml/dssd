# Usa una imagen base de Node.js para construir la aplicación Angular
FROM node:22.0.0-alpine as build

# Definir el directorio de trabajo
WORKDIR /app

# Copiar los archivos de configuración de npm
COPY package.json ./
COPY package-lock.json ./

# Instalar dependencias globales y locales
RUN npm install -g @angular/cli
RUN npm install

# Copiar el código fuente de la aplicación Angular
COPY . .

# Construir la aplicación Angular en modo producción
RUN npm run build -- --configuration production



# Etapa 2: Configuración de Nginx para servir la aplicación Angular
FROM nginx:alpine

# Copiar la configuración personalizada de Nginx
COPY nginx.conf /etc/nginx/nginx.conf

# Copiar la aplicación Angular construida (contenido de 'browser') a la carpeta de Nginx
COPY --from=build /app/dist/cliente/browser /usr/share/nginx/html

# Exponer el puerto 80
EXPOSE 80

# Comando por defecto
CMD ["nginx", "-g", "daemon off;"]

